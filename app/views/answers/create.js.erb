function addAnswer() {
  // hide time bar
  const timeBar = document.querySelector('.bar');
  timeBar.style.display = 'none';

  const menuScoreContainer = document.querySelector('.menu-score-container');
  const menuScoreHTML = '<%= j render "answers/menu_score", game: @game, poi: @poi, next_poi: @next_poi, answer: @answer %>';

  if (document.querySelector('.score-card')) {
    const menuScoreClosed = document.querySelector('.score-card');
    menuScoreClosed.classList.add("open");
  }

  menuScoreContainer.innerHTML = menuScoreHTML;

  // display correct poi marker
  new window.mapboxgl.Marker({color: "#08c299"})
    .setLngLat([ <%= @poi_marker[:lng] %>, <%= @poi_marker[:lat] %> ])
    .addTo(window.map);
}

addAnswer();
