<div class="row-pin">
  <%= image_tag "pin_score.svg", class:"icon-pin"%>
  <p class="score-distance text-center"><%= answer.distance %> meters</p>
</div>
<div class="row-time">
  <%= image_tag "time_score.svg", class:"time"%>
  <p><%= answer.time_to_respond %> s</p>
</div>
<div class="great-bad">
  <% if answer.score >= 200 %>
    <div class="icon icon-great">
      <%= image_tag "great.svg", class:"great"%>
    </div>
  <% else %>
    <div class="icon icon-bad">
      <%= image_tag "bad.svg", class:"bad"%>
    </div>
  <% end %>
</div>
<div class="score-answer text-center">
  <h1><%= answer.score %> points</h1>
</div>
<div class="button-answer btn-pimp-w btn-fw-2 text-center">
  <% if next_poi.nil? %>
    <%= link_to "> See your score" , game_url(game) %>
  <% else %>
    <%= link_to "> Next question" , game_poi_url(game, next_poi) %>
  <% end %>
</div>
