 <% local = 1 %>
  <%  games.each_with_index do |game, index| %>
    <% unless game.score == 0 %>
      <div class="row vertical-center row-leaderboard">
        <div class="col-xs-4 border-column take-space leaderboard-rank">
          <h3><%= "#{local}" %></h3>
        </div>
        <div class="col-xs-4 border-column take-space leaderboard-name">
          <h3><%= game.winner.username %></h3>
        </div>

        <div class="col-xs-4 border-column take-space leaderboard-score">
          <h3><%= game.score %></h3>
        </div>
      </div>
      <% local += 1 %>
    <% end %>
  <% end %>
