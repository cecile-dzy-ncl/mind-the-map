    </li>
    <li>
     <%= link_to "CITIES ALL (cities_url)", cities_url  %>
    </li>
    <li>
      <% @city = City.find(1) %>
      <%= link_to "SHOW LES THEMES DE LA CITY 1 ( city_themes_url(@city) )", city_themes_url(@city)  %>
    </li>

    <li>
      <%= link_to "GAMES (games_url)", games_url %>
    </li>
  </ul>
</div>

